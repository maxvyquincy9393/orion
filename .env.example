# ============================================
# Orion - Environment Variables
# ============================================
# Copy this file to .env and fill in values.
# NEVER commit the .env file - it's in .gitignore.
# ============================================

# Anthropic - API Key (Required)
ANTHROPIC_API_KEY=

# OpenAI - Optional
OPENAI_API_KEY=

# Google Gemini - Optional
GEMINI_API_KEY=

# Ollama - Local Free
OLLAMA_BASE_URL=http://localhost:11434

# Database
# SQLite (quick start): sqlite:///orion.db
# PostgreSQL: postgresql://user:password@localhost:5432/orion
DATABASE_URL=sqlite:///orion.db
SUPABASE_URL=
SUPABASE_KEY=

# Telegram - Required for delivery
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Voice - Free local options
WHISPER_MODEL=base
TTS_ENGINE=coqui
ELEVENLABS_API_KEY=

# Vision
VISION_ENGINE=gemini
VISION_MODE=passive
FRAME_SAMPLE_INTERVAL=2
MOTION_THRESHOLD=0.15

# Background
REDIS_URL=redis://localhost:6379

# Config
DEFAULT_ENGINE=claude
DEFAULT_USER_ID=owner
PERMISSIONS_CONFIG=permissions/permissions.yaml
LOG_LEVEL=INFO
